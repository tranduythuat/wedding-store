{
  "name": "wedding-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Modern wedding website built with Vue 3, Vite, Pinia, and Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "vite --host 0.0.0.0 --port 5173",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore",
    "format": "prettier --write src/",
    "docker:dev": "docker-compose --profile development up --build",
    "docker:prod": "docker-compose --profile production up --build -d",
    "docker:staging": "docker-compose --profile staging up --build",
    "docker:down": "docker-compose down",
    "docker:clean": "docker-compose down -v --rmi all"
  },
  "dependencies": {
    "vue": "^3.4.15",
    "vue-router": "^4.2.5",
    "pinia": "^2.1.7",
    "@vueuse/core": "^10.7.1",
    "axios": "^1.6.5",
    "@headlessui/vue": "^1.7.17",
    "@heroicons/vue": "^2.0.18",
    "swiper": "^11.0.5",
    "aos": "^2.3.4",
    "date-fns": "^3.2.0",
    "sass": "^1.69.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.3",
    "vite": "^5.0.11",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.1",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.4",
    "prettier-plugin-tailwindcss": "^0.5.11"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "keywords": [
    "vue3",
    "vite",
    "pinia",
    "tailwindcss",
    "wedding",
    "frontend",
    "docker",
    "nginx"
  ]
}